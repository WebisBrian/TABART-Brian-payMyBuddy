# =========================
# DEV profile (EXAMPLE)
# =========================
# Copy this file to: application-dev.properties

# -------------------------
# Datasource (MySQL)
# -------------------------
# Defaults allow local launch without additional config.
spring.datasource.url=jdbc:mysql://${DB_HOST:localhost}:${DB_PORT:3306}/${DB_NAME:pay_my_buddy}?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
spring.datasource.username=${DB_USERNAME:root}
spring.datasource.password=${DB_PASSWORD:root}
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# -------------------------
# JPA (dev convenience)
# -------------------------
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true

# -------------------------
# DB-first rule
# -------------------------
spring.jpa.hibernate.ddl-auto=validate
spring.sql.init.mode=never
