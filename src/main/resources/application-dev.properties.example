# DB configuration (replace with your credentials)
spring.datasource.url=jdbc:mysql://localhost:3306/pay_my_buddy?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
spring.datasource.username=CHANGE_ME
spring.datasource.password=CHANGE_ME

# SQL Initialization
spring.sql.init.mode=always
spring.sql.init.schema-locations=classpath:schema.sql
spring.sql.init.data-locations=classpath:data.sql
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# Avoid a crash if data don't exist
spring.sql.init.continue-on-error=false

# SQL logging - activated only for dev profile
spring.jpa.show-sql=true
